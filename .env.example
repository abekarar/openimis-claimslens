# =============================================================================
# ClaimLens Environment Configuration
# Copy this file to .env and adjust values for your deployment
# =============================================================================

# -- Application --
CLAIMLENS_ENV=development
CLAIMLENS_DEBUG=true
CLAIMLENS_LOG_LEVEL=DEBUG
CLAIMLENS_SECRET_KEY=change-me-in-production

# -- Database (PostgreSQL) --
CLAIMLENS_DB_HOST=postgres
CLAIMLENS_DB_PORT=5432
CLAIMLENS_DB_NAME=claimlens
CLAIMLENS_DB_USER=claimlens
CLAIMLENS_DB_PASSWORD=claimlens_dev
CLAIMLENS_DATABASE_URL=postgresql+asyncpg://claimlens:claimlens_dev@postgres:5432/claimlens

# -- Redis --
CLAIMLENS_REDIS_HOST=redis
CLAIMLENS_REDIS_PORT=6379
CLAIMLENS_REDIS_URL=redis://redis:6379/0
CLAIMLENS_CELERY_BROKER_URL=redis://redis:6379/1
CLAIMLENS_CELERY_RESULT_BACKEND=redis://redis:6379/2

# -- MinIO (S3-compatible storage) --
CLAIMLENS_MINIO_ENDPOINT=minio:9000
CLAIMLENS_MINIO_ACCESS_KEY=claimlens
CLAIMLENS_MINIO_SECRET_KEY=claimlens_dev
CLAIMLENS_MINIO_BUCKET=claimlens-documents
CLAIMLENS_MINIO_SECURE=false

# -- LLM Engine (Mistral - MVP default) --
CLAIMLENS_ENGINE_DEFAULT=mistral
CLAIMLENS_MISTRAL_API_KEY=your-mistral-api-key-here
CLAIMLENS_MISTRAL_MODEL=pixtral-large-latest
CLAIMLENS_MISTRAL_ENDPOINT=https://api.mistral.ai/v1

# -- Processing --
CLAIMLENS_MAX_FILE_SIZE_MB=50
CLAIMLENS_MIN_DPI=200
CLAIMLENS_DEFAULT_LANGUAGE=en
CLAIMLENS_WORKER_CONCURRENCY=4

# -- Confidence Thresholds --
CLAIMLENS_CONFIDENCE_AUTO_APPROVE=0.90
CLAIMLENS_CONFIDENCE_REVIEW_THRESHOLD=0.60
CLAIMLENS_CONFIDENCE_CLASSIFICATION_MIN=0.80

# -- External ports (host-side, avoids openIMIS conflicts) --
CLAIMLENS_API_PORT=8001
CLAIMLENS_FRONTEND_PORT=3001
CLAIMLENS_DB_EXTERNAL_PORT=5433
CLAIMLENS_REDIS_EXTERNAL_PORT=6380
CLAIMLENS_MINIO_API_PORT=9000
CLAIMLENS_MINIO_CONSOLE_PORT=9001
